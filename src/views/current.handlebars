<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Mi perfil – eCommerce</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      background: #f5f7fa;
      font-family: 'Inter', sans-serif;
    }

    .card-profile {
      border: none;
      border-radius: 1.2rem;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      background-color: #ffffff;
      max-width: 520px;
      margin: 5rem auto;
      padding: 2.5rem 2.5rem 2rem;
    }

    .profile-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .profile-header img {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #667eea;
    }

    .profile-name {
      font-weight: 600;
      font-size: 1.4rem;
      margin-top: 0.75rem;
      color: #333;
    }

    .profile-role {
      color: #6c757d;
      font-size: 0.95rem;
      text-transform: capitalize;
    }

    .list-group-item {
      border: none;
      padding: 0.75rem 0;
      font-size: 0.95rem;
    }

    .btn-outline-primary {
      border-radius: .6rem;
      font-weight: 500;
    }
  </style>
</head>

<body>
  <div class="card-profile">
    <div class="profile-header">
      <img src="https://i.pravatar.cc/90?u={{user.email}}" alt="Avatar">
      <div class="profile-name">{{user.first_name}} {{user.last_name}}</div>
      <div class="profile-role">{{user.role}}</div>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between">
        <strong>Email:</strong>
        <span>{{user.email}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>Edad:</strong>
        <span>{{user.age}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>ID Carrito:</strong>
        <span class="text-muted">{{user.cart}}</span>
      </li>
    </ul>

    <div class="text-center mt-4">
      <button id="logoutBtn" class="btn btn-danger">Cerrar sesión</button>
      <a href="/" class="btn btn-primary">Ir a Home</a>
    </div>
  </div>

  <script>
document.addEventListener('DOMContentLoaded', async () => {
    const res = await fetch('/api/sessions/current');
    const data = await res.json();
    if (res.ok) {
        setTimeout(() => window.location.href = '/home', 1000);
    } else {
        window.location.href = '/login';
    }
});

document.getElementById('logoutBtn').addEventListener('click', async () => {
    try {
        await fetch('/api/sessions/logout', { method: 'POST' });
        window.location.href = '/login';
    } catch (err) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'No se pudo cerrar la sesión'
        });
    }
});
</script>
<pre id="user-info"></pre>
</body>
</html>