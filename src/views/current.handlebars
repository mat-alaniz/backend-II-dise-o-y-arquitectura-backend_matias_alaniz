<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Mi perfil – eCommerce</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      background: #f5f7fa;
      font-family: 'Inter', sans-serif;
    }

    .card-profile {
      border: none;
      border-radius: 1.2rem;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      background-color: #ffffff;
      max-width: 520px;
      margin: 5rem auto;
      padding: 2.5rem 2.5rem 2rem;
    }

    .profile-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .profile-header img {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #667eea;
    }

    .profile-name {
      font-weight: 600;
      font-size: 1.4rem;
      margin-top: 0.75rem;
      color: #333;
    }

    .profile-role {
      color: #6c757d;
      font-size: 0.95rem;
      text-transform: capitalize;
    }

    .list-group-item {
      border: none;
      padding: 0.75rem 0;
      font-size: 0.95rem;
    }

    .btn-outline-primary {
      border-radius: .6rem;
      font-weight: 500;
    }
  </style>
</head>

<body>
  <div class="card-profile">
    <div class="profile-header">
      <img src="https://i.pravatar.cc/90?u={{user.email}}" alt="Avatar">
      <div class="profile-name">{{user.first_name}} {{user.last_name}}</div>
      <div class="profile-role">{{user.role}}</div>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between">
        <strong>Email:</strong>
        <span>{{user.email}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>Edad:</strong>
        <span>{{user.age}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>ID Carrito:</strong>
        <span class="text-muted">{{user.cart}}</span>
      </li>
    </ul>

    <div class="text-center mt-4">
      <button id="logoutBtn" class="btn btn-outline-primary w-100">Cerrar sesión</button>
    </div>
  </div>

  <script>
    (async () => {
      const token = localStorage.getItem('token');
      if (!token) {
        Swal.fire({
          icon: 'warning',
          title: 'No autenticado',
          text: 'Por favor iniciá sesión',
          confirmButtonText: 'Ir al login'
        }).then(() => location.href = '/login');
        return;
      }

      try {
        const res = await fetch('/api/sessions/current', {
          headers: { Authorization: `Bearer ${token}` }
        });

        if (!res.ok) throw new Error('Token inválido');

        const { user } = await res.json();
      
        document.querySelector('.profile-name').textContent = `${user.first_name} ${user.last_name}`;
        document.querySelector('.profile-role').textContent = user.role;
        document.querySelectorAll('.list-group-item span')[0].textContent = user.email;
        document.querySelectorAll('.list-group-item span')[1].textContent = user.age;
        document.querySelectorAll('.list-group-item span')[2].textContent = user.cart;
      } catch (err) {
        Swal.fire({
          icon: 'error',
          title: 'Sesión expirada',
          text: 'Volvé a iniciar sesión'
        }).then(() => location.href = '/login');
      }
    })();

    document.getElementById('logoutBtn').addEventListener('click', () => {
      localStorage.removeItem('token');
      Swal.fire({
        icon: 'success',
        title: 'Sesión cerrada',
        timer: 1000,
        showConfirmButton: false
      }).then(() => location.href = '/login');
    });
  </script>
</body>
</html>